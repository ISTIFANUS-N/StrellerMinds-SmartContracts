{
  "name": "stellarminds-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for StellarMinds smart contracts on Soroban localnet",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --ci --reporters=default --reporters=jest-junit",
    "localnet:up": "docker-compose up -d",
    "localnet:down": "docker-compose down -v",
    "localnet:logs": "docker-compose logs -f",
    "setup": "npm install && npm run build:contracts",
    "build:contracts": "cd .. && ./scripts/build.sh",
    "deploy:local": "ts-node utils/deploy-contracts.ts",
    "test:full": "npm run localnet:up && npm run deploy:local && npm test && npm run localnet:down"
  },
  "keywords": [
    "stellar",
    "soroban",
    "e2e",
    "testing"
  ],
  "author": "StellarMinds Team",
  "license": "MIT",
  "dependencies": {
    "@stellar/stellar-sdk": "^12.3.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.9.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "jest-junit": {
    "outputDirectory": "./test-results",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": true
  }
}
